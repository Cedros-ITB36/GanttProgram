<local:Dialog x:Class="GanttProgram.ProjectDialog"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:viewModels="clr-namespace:GanttProgram.ViewModels"
              xmlns:local="clr-namespace:GanttProgram"
              mc:Ignorable="d"
              Height="450"
              Width="750"
              ResizeMode="NoResize"
              Icon="Icons/GanttChartIcon.ico"
              d:DataContext="{d:DesignInstance viewModels:ProjectViewModel}">
    <Grid>
        <Grid>
            <Image HorizontalAlignment="Left"
                   Height="259"
                   Margin="40,40,0,0"
                   VerticalAlignment="Top"
                   Width="259"
                   Source="Icons/projects.png" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,40,0,0"
                       TextWrapping="Wrap"
                       Text="Projekt"
                       VerticalAlignment="Top"
                       FontSize="24"
                       FontWeight="Bold" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,90,0,0"
                       TextWrapping="Wrap"
                       Text="Bezeichnung"
                       VerticalAlignment="Top" />
            <TextBox x:Name="BezeichnungTextBox"
                     HorizontalAlignment="Left"
                     Margin="490,90,0,0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Top"
                     Width="220" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,130,0,0"
                       TextWrapping="Wrap"
                       Text="Startdatum"
                       VerticalAlignment="Top" />
            <DatePicker x:Name="StartdatumDatePickerBox"
                        HorizontalAlignment="Left"
                        Margin="490,130,0,0"
                        Text=""
                        VerticalAlignment="Top"
                        Width="220" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,170,0,0"
                       TextWrapping="Wrap"
                       Text="Enddatum"
                       VerticalAlignment="Top" />
            <DatePicker x:Name="EnddatumDatePickerBox"
                        HorizontalAlignment="Left"
                        Margin="490,170,0,0"
                        Text=""
                        VerticalAlignment="Top"
                        Width="220" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,220,0,0"
                       TextWrapping="Wrap"
                       Text="Verantwortlicher"
                       VerticalAlignment="Top" />
            <ComboBox x:Name="VerantwortlicherComboBox"
                      ItemsSource="{Binding EmployeeList}"
                      SelectedValue="{Binding EmployeeId, Mode=TwoWay}"
                      SelectedValuePath="Id"
                      HorizontalAlignment="Left"
                      Margin="490, 210,0,0"
                      Text=""
                      VerticalAlignment="Top"
                      Width="220" />
        </Grid>
        <Grid VerticalAlignment="Bottom"
              Height="90">
            <Button x:Name="CloseButton"
                    ToolTip="Abbrechen"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,120,20"
                    Width="50"
                    Height="50"
                    Click="CloseDialog">
                <StackPanel>
                    <Image Source="Icons/close.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
            <Button x:Name="Save"
                    ToolTip="Speichern"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,20"
                    Width="50"
                    Height="50"
                    Click="SaveDialog">
                <StackPanel>
                    <Image Source="Icons/save.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
    <local:Dialog.InputBindings>
        <KeyBinding Key="S"
                    Modifiers="Control"
                    Command="{Binding SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
        <KeyBinding Key="F4"
                    Modifiers="Alt"
                    Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
    </local:Dialog.InputBindings>
</local:Dialog>