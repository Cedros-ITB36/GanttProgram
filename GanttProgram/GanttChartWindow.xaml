<Window x:Class="GanttProgram.GanttChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="GanttChartWindow" Height="450" Width="800" Background="#f5f5f5"
        Loaded="Window_Loaded"
        ThemeMode="Light"
        Icon="Icons/GanttChartIcon.ico">
    <Grid>
        <Grid Margin="20,20,20,90">
            <ScrollViewer x:Name="GanttScrollViewer"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      VerticalContentAlignment="Top"
                      SizeChanged="GanttScrollViewer_SizeChanged" VerticalAlignment="Top">
                <Canvas x:Name="GanttCanvas"/>
            </ScrollViewer>
        </Grid>
        <Grid Background="#FFE5E5E5"
          Height="70"
          VerticalAlignment="Bottom">
            <Button x:Name="ExportPdf" ToolTip="als PDF exportieren" 
                    HorizontalAlignment="Left"
                    DockPanel.Dock="Top"
                    Width="50"
                    Height="50"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    Click="ExportPdfButton_Click"
                    Background="White">
                <StackPanel>
                    <Image Source="Icons/export.png"
                       Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>