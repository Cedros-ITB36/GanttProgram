<local:Dialog x:Class="GanttProgram.EmployeeDialog"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:local="clr-namespace:GanttProgram"
              mc:Ignorable="d"
              Title="MitarbeiterDialog"
              Height="450"
              Width="750"
              ResizeMode="NoResize"
              Icon="Icons/GanttChartIcon.ico">
    <Grid x:Name="Employee">
        <Grid>
            <Image HorizontalAlignment="Left"
                   Margin="40,40,0,0"
                   VerticalAlignment="Top"
                   Width="259"
                   Height="259"
                   Source="Icons/employee.png" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,40,0,0"
                       TextWrapping="Wrap"
                       Text="Mitarbeiter"
                       VerticalAlignment="Top"
                       FontSize="24"
                       FontWeight="Bold" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,90,0,0"
                       TextWrapping="Wrap"
                       Text="Name"
                       VerticalAlignment="Top" />
            <TextBox x:Name="NameTextBox"
                     HorizontalAlignment="Left"
                     Margin="490,90,0,0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Top"
                     Width="200" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,130,0,0"
                       TextWrapping="Wrap"
                       Text="Vorname"
                       VerticalAlignment="Top" />
            <TextBox x:Name="VornameTextBox"
                     HorizontalAlignment="Left"
                     Margin="490,130,0,0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Top"
                     Width="200" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,170,0,0"
                       TextWrapping="Wrap"
                       Text="Abteilung"
                       VerticalAlignment="Top" />
            <TextBox x:Name="AbteilungTextBox"
                     HorizontalAlignment="Left"
                     Margin="490,170,0,0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Top"
                     Width="200" />
            <TextBlock HorizontalAlignment="Left"
                       Margin="350,220,0,0"
                       TextWrapping="Wrap"
                       Text="Telefon"
                       VerticalAlignment="Top" />
            <TextBox x:Name="TelefonTextBox"
                     HorizontalAlignment="Left"
                     Margin="490, 220,0,0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Top"
                     Width="200" />
        </Grid>
        <Grid VerticalAlignment="Bottom" Height="90">
            <Button x:Name="CloseButton"
                    ToolTip="Abbrechen"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,120,20"
                    Width="50"
                    Height="50"
                    Click="CloseDialog">
                <StackPanel>
                    <Image Source="Icons/close.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
            <Button x:Name="Save"
                    ToolTip="Speichern"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,20"
                    Width="50"
                    Height="50"
                    Click="SaveDialog">
                <StackPanel>
                    <Image Source="Icons/save.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
    <local:Dialog.InputBindings>
        <KeyBinding Key="S"
                    Modifiers="Control"
                    Command="{Binding SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
        <KeyBinding Key="F4"
                    Modifiers="Alt"
                    Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
    </local:Dialog.InputBindings>
</local:Dialog>