<Window x:Class="GanttProgram.MitarbeiterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="MitarbeiterDialog" ThemeMode="Light" Height="450" Width="800" Icon="Icons/GanttChartIcon.ico">
    <Grid x:Name="employee">
        <Image HorizontalAlignment="Left" Height="259" Margin="56,40,0,0" VerticalAlignment="Top" Width="259" Source="Icons/employee.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,40,0,0" TextWrapping="Wrap" Text="Mitarbeiter" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,90,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="490,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" />
        <TextBlock HorizontalAlignment="Left" Margin="350,130,0,0" TextWrapping="Wrap" Text="Vorname" VerticalAlignment="Top"/>
        <TextBox x:Name="VornameTextBox" HorizontalAlignment="Left" Margin="490,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,170,0,0" TextWrapping="Wrap" Text="Abteilung" VerticalAlignment="Top"/>
        <TextBox x:Name="AbteilungTextBox" HorizontalAlignment="Left" Margin="490,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,220,0,0" TextWrapping="Wrap" Text="Telefon" VerticalAlignment="Top"/>
        <TextBox x:Name="TelefonTextBox" HorizontalAlignment="Left" Margin="490, 220,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="Close" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,100,13" Width="50" Height="50" Click="CloseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/close.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="Save" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,13" Width="50" Height="50" Click="SaveMitarbeiter" Background="White">
            <StackPanel>
                <Image Source="Icons/save.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
    </Grid>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Window.InputBindings>
</Window>
