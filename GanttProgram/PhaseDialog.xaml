<local:Dialog x:Class="GanttProgram.PhaseDialog"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:local="clr-namespace:GanttProgram"
              mc:Ignorable="d"
              Height="650"
              Width="750"
              MinHeight="550"
              MinWidth="700"
              ResizeMode="CanResize"
              Icon="Icons/GanttChartIcon.ico">
    <Grid>
        <Grid>
            <Image HorizontalAlignment="Left"
                   Height="259"
                   Margin="40,40,0,0"
                   VerticalAlignment="Top"
                   Width="259"
                   Source="Icons/phases.png" />
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0, 0, 0, 80">
                <Grid Margin="340, 50, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="0, 0, 0, 20"
                               TextWrapping="Wrap"
                               Text="Phasen"
                               VerticalAlignment="Top"
                               FontSize="24"
                               FontWeight="Bold"
                               Grid.Column="0"
                               Grid.Row="0"
                               Grid.ColumnSpan="2" />
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"
                               Text="Nummer"
                               Grid.Column="0"
                               Grid.Row="1" />
                    <TextBox x:Name="NummerTextBox"
                             Text=""
                             Margin="25, 10, 20, 10"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             Grid.Column="1"
                             Grid.Row="1" />
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"
                               Text="Name"
                               Grid.Column="0"
                               Grid.Row="2" />
                    <TextBox x:Name="NameTextBox"
                             Text=""
                             Margin="25, 10, 20, 10"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             Grid.Column="1"
                             Grid.Row="2" />
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               TextWrapping="NoWrap"
                               Text="Dauer"
                               Grid.Column="0"
                               Grid.Row="3" />
                    <TextBox x:Name="DauerTextBox"
                             Text=""
                             Margin="25, 10, 20, 10"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             TextWrapping="Wrap"
                             Grid.Column="1"
                             Grid.Row="3" />
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="0, 20, 0, 0"
                               TextWrapping="NoWrap"
                               Text="Vorgänger"
                               Grid.Column="0"
                               Grid.Row="4" />
                    <ListBox x:Name="VorgaengerListBox"
                             SelectionMode="Multiple"
                             DisplayMemberPath="AsString"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Stretch"
                             Margin="25, 10, 20, 10"
                             Grid.Column="1"
                             Grid.Row="4">
                    </ListBox>
                </Grid>
            </ScrollViewer>
        </Grid>
        <Grid VerticalAlignment="Bottom"
              Height="90">
            <Button x:Name="CloseButton"
                    ToolTip="Abbrechen"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,120,20"
                    Width="50"
                    Height="50"
                    Click="CloseDialog">
                <StackPanel>
                    <Image Source="Icons/close.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
            <Button x:Name="Save"
                    ToolTip="Speichern"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,20"
                    Width="50"
                    Height="50"
                    Click="SaveDialog">
                <StackPanel>
                    <Image Source="Icons/save.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>

        </Grid>
    </Grid>
    <local:Dialog.InputBindings>
        <KeyBinding Key="S"
                    Modifiers="Control"
                    Command="{Binding SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
        <KeyBinding Key="F4"
                    Modifiers="Alt"
                    Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
    </local:Dialog.InputBindings>
</local:Dialog>