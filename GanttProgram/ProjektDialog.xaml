<Window x:Class="GanttProgram.ProjektDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="ProjektDialog" ThemeMode="Light" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="259" Margin="56,40,0,0" VerticalAlignment="Top" Width="259" Source="Icons/projects.png" />
        <TextBlock HorizontalAlignment="Left" Margin="400,50,0,0" TextWrapping="Wrap" Text="Projekt" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,80,0,0" TextWrapping="Wrap" Text="Bezeichnung" VerticalAlignment="Top"/>
        <TextBox x:Name="BezeichnungTextBox" HorizontalAlignment="Left" Margin="540,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="400,110,0,0" TextWrapping="Wrap" Text="Startdatum" VerticalAlignment="Top"/>
        <DatePicker x:Name="StartdatumDatePickerBox" HorizontalAlignment="Left" Margin="540,110,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,140,0,0" TextWrapping="Wrap" Text="Enddatum" VerticalAlignment="Top"/>
        <DatePicker x:Name="EnddatumDatePickerBox" HorizontalAlignment="Left" Margin="540,140,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,170,0,0" TextWrapping="Wrap" Text="Verantwortlicher" VerticalAlignment="Top"/>
        <ComboBox x:Name="VerantwortlicherComboBox" ItemsSource="{Binding MitarbeiterListe}"
                  SelectedValue="{Binding MitarbeiterId, Mode=TwoWay}"
                  SelectedValuePath="Id"
                  DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="540, 170,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Close" HorizontalAlignment="Left" Margin="600,350,10,10" Width="50" Height="50" Click="CloseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/close.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="Save" HorizontalAlignment="Left" Margin="700,350,10,10" Width="50" Height="50" Click="SaveProjekt" Background="White">
            <StackPanel>
                <Image Source="Icons/save.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
