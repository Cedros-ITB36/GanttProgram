<Window x:Class="GanttProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="Mitarbeiter und Projekte" ThemeMode="Light" Height="475" Width="800" Icon="Icons/GanttChartIcon.ico">

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <TabControl x:Name="MainTabControl">
            <TabItem Header="Mitarbeiter">
                <Grid Height="407">
                    <DataGrid x:Name="MitarbeiterDataGrid" IsReadOnly="True" SelectionMode="Single"
                              AutoGenerateColumns="False" CanUserAddRows="False"
                              HeadersVisibility="Column" HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch" Margin="0,0,0,70" ColumnWidth="*">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                            <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname}" />
                            <DataGridTextColumn Header="Abteilung" Binding="{Binding Abteilung}" />
                            <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="AddMitarbeiter" ToolTip="Neuen Mitarbeiter anlegen" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,13" Width="50" Height="50" Click="OpenAddMitarbeiterDialog" Background="White">
                        <StackPanel>
                            <Image Source="Icons/addMitarbeiter.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="EditMitarbeiter" ToolTip="Mitarbeiter bearbeiten" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="120,0,0,13" Width="50" Height="50" Click="OpenEditMitarbeiterDialog" Background="White">
                        <StackPanel>
                            <Image Source="Icons/editMitarbeiter.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="DeleteMitarbeiter" ToolTip="Mitarbeiter löschen" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="220,0,0,13" Width="50" Height="50" Click="DeleteMitarbeiterPopup" Background="White">
                        <StackPanel>
                            <Image Source="Icons/Delete.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ImportMitarbeiter" ToolTip="Mitarbeiterdaten importieren" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="320,0,0,13" Width="50" Height="50" Click="ImportMitarbeiterCsv_Click" Background="White">
                        <StackPanel>
                            <Image Source="Icons/import.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ExportMitarbeiter" ToolTip="Mitarbeiterdaten als csv exportieren" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="420,0,0,13" Width="50" Height="50" Click="ExportMitarbeiterCsv_Click" Background="White">
                        <StackPanel>
                            <Image Source="Icons/csv.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>

            <TabItem Header="Projekte">
                <Grid Height="407">
                    <DataGrid x:Name="ProjektDataGrid"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Margin="0,0,0,70"
                              ColumnWidth="*">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Bezeichnung" Binding="{Binding Bezeichnung}" />
                            <DataGridTextColumn Header="Startdatum" Binding="{Binding StartDatum, StringFormat={}{0:dd.MM.yyyy}}" />
                            <DataGridTextColumn Header="Enddatum" Binding="{Binding EndDatum, StringFormat={}{0:dd.MM.yyyy}}" />
                            <DataGridTextColumn Header="Verantwortlicher" Binding="{Binding Verantwortlicher}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="AddProjekt" ToolTip="Neues Projekt anlegen" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,13" Width="50" Height="50" Click="OpenAddProjektDialog" Background="White">
                        <StackPanel>
                            <Image Source="Icons/addProjekt.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="EditProjekt" ToolTip="Projekt bearbeiten" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="120,0,0,13" Width="50" Height="50" Click="OpenEditProjektDialog" Background="White">
                        <StackPanel>
                            <Image Source="Icons/editProjekt.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="DeleteProjekt" ToolTip="Projekt löschen" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="220,0,0,13" Width="50" Height="50" Click="OpenDeleteProjektPopup" Background="White">
                        <StackPanel>
                            <Image Source="Icons/Delete.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ImportProjekte" ToolTip="Projektdaten importieren" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="320,0,0,13" Width="50" Height="50" Click="ImportProjektCsv_Click" Background="White">
                        <StackPanel>
                            <Image Source="Icons/import.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ExportProjekte" ToolTip="Projekt und Phasen exportieren" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="420,0,0,13" Width="50" Height="50" Click="ExportProjektCsv_Click" Background="White">
                        <StackPanel>
                            <Image Source="Icons/csv.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="Phasen" ToolTip="Phasenfenster öffnen" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="600,0,0,13" Width="50" Height="50" Click="OpenPhasesForSelectedProject" Background="White">
                        <StackPanel>
                            <Image Source="Icons/Phasen.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="Gantt" ToolTip="Gantt Diagramm generieren" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="700,0,0,13" Width="50" Height="50" Click="GenerateGanttChart" Background="White">
                        <StackPanel>
                            <Image Source="Icons/GanttIcon.png" Stretch="Fill"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>
                        </StackPanel>
                    </Button>

                </Grid>

            </TabItem>
        </TabControl>


    </Grid>
</Window>
