<Window x:Class="GanttProgram.PhasenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="PhasenWindow" ThemeMode="Light" Height="475" Width="800">
    <Grid Height="407">
        <DataGrid x:Name="PhasenDataGrid" SelectionMode="Single"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  HeadersVisibility="Column" HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" Margin="0,0,0,70" ColumnWidth="*" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nummer" Binding="{Binding Nummer}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Dauer" Binding="{Binding Dauer}" />
                <DataGridTextColumn Header="Vorgänger" Binding="{Binding VorgaengerListe}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddPhase" HorizontalAlignment="Left" Margin="20,352,0,5" Width="50" Height="50" Click="OpenAddPhaseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/addPhase.png" Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="EditPhase" HorizontalAlignment="Left" Margin="120,352,0,5" Width="50" Height="50" Click="OpenEditPhaseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/editPhase.png" Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="DeletePhase" HorizontalAlignment="Left" Margin="220,352,0,5" Width="50" Height="50" Click="OpenDeletePhasePopup" Background="White">
            <StackPanel>
                <Image Source="Icons/Delete.png" Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <!--<Button x:Name="Gantt" HorizontalAlignment="Left" Margin="700,352,0,5" Width="50" Height="50" Click="OnGenerateGanttChartClick" Background="White">
            <StackPanel>
                <Image Source="Icons/GanttIcon.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>
            </StackPanel>
        </Button>-->
    </Grid>
</Window>
