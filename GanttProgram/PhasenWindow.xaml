<Window x:Class="GanttProgram.PhasenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="PhasenWindow" Height="500" Width="850">
    <Grid>
        <DataGrid x:Name="PhasenDataGrid" SelectionMode="Single"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  HeadersVisibility="Column" HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" Margin="0,0,0,70" ColumnWidth="*" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Nummer" Binding="{Binding Nummer}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Dauer" Binding="{Binding Dauer}" />
                <DataGridTextColumn Header="Vorgänger" Binding="{Binding VorgaengerListe}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddPhase" HorizontalAlignment="Left" Margin="50,417,0,5" Width="50" Height="50" Click="OpenAddPhaseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/addPhase.png" Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="EditPhase" HorizontalAlignment="Left" Margin="150,417,0,5" Width="50" Height="50" Click="OpenEditPhaseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/editPhase.png" Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="DeletePhase" HorizontalAlignment="Left" Margin="250,417,10,10" Width="50" Height="50" Click="OpenDeletePhasePopup" Background="White">
            <StackPanel>
                <Image Source="Icons/Delete.png" Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
