<Window x:Class="GanttProgram.PhasenDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="PhasenDialog" ThemeMode="Light" Height="450" Width="800" Icon="Icons/GanttChartIcon.ico">
    <Grid>
        <Image HorizontalAlignment="Left" Height="259" Margin="56,40,0,0" VerticalAlignment="Top" Width="259" Source="Icons/phases.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,40,0,0" TextWrapping="Wrap" Text="Phasen" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,90,0,0" TextWrapping="Wrap" Text="Nummer" VerticalAlignment="Top"/>
        <TextBox x:Name="NummerTextBox" HorizontalAlignment="Left" Margin="490,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200" />
        <TextBlock HorizontalAlignment="Left" Margin="350,130,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="490,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,170,0,0" TextWrapping="Wrap" Text="Dauer" VerticalAlignment="Top"/>
        <TextBox x:Name="DauerTextBox" HorizontalAlignment="Left" Margin="490,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="350,220,0,0" TextWrapping="Wrap" Text="Vorgänger" VerticalAlignment="Top"/>
        <ListBox x:Name="VorgaengerListBox"
                 SelectionMode="Multiple"
                 DisplayMemberPath="Name"
                 Margin="490,220,0,0" Width="200" Background="AliceBlue" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left">
        </ListBox>
        <Button x:Name="Close" ToolTip="Abbrechen" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,100,13" Width="50" Height="50" Click="CloseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/close.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="Save" ToolTip="Speichern" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,30,13" Width="50" Height="50" Click="SavePhase" Background="White">
            <StackPanel>
                <Image Source="Icons/save.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>

    </Grid>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Window.InputBindings>
</Window>
