<Window x:Class="GanttProgram.PhasenDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanttProgram"
        mc:Ignorable="d"
        Title="PhasenDialog" Height="450" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="259" Margin="56,40,0,0" VerticalAlignment="Top" Width="259" Source="Icons/phases.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,40,0,0" TextWrapping="Wrap" Text="Phasen" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,80,0,0" TextWrapping="Wrap" Text="Nummer" VerticalAlignment="Top"/>
        <TextBox x:Name="NummerTextBox" HorizontalAlignment="Left" Margin="540,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="450,110,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="540,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,140,0,0" TextWrapping="Wrap" Text="Dauer" VerticalAlignment="Top"/>
        <TextBox x:Name="DauerTextBox" HorizontalAlignment="Left" Margin="540,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="450,170,0,0" TextWrapping="Wrap" Text="Vorgaenger" VerticalAlignment="Top"/>
        <TextBox x:Name="VorgaengerTextBox" HorizontalAlignment="Left" Margin="540, 170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Close" HorizontalAlignment="Left" Margin="600,350,10,10" Width="50" Height="50" Click="CloseDialog" Background="White">
            <StackPanel>
                <Image Source="Icons/close.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
        <Button x:Name="Save" HorizontalAlignment="Left" Margin="700,350,10,10" Width="50" Height="50" Click="SavePhase" Background="White">
            <StackPanel>
                <Image Source="Icons/save.png" Stretch="Fill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
