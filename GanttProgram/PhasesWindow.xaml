<Window x:Class="GanttProgram.PhasesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GanttProgram.ViewModels"
        mc:Ignorable="d"
        Title="PhasenWindow"
        Height="475"
        Width="800"
        Icon="Icons/GanttChartIcon.ico"
        MinWidth="400"
        MinHeight="250"
        d:DataContext="{d:DesignInstance viewModels:PhaseViewModel}">
    <Window.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,0,18,0"/>
            <Setter Property="BorderBrush" Value="#FFD3D3D3"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid Height="{TemplateBinding Height}">
                                <ContentPresenter
                                Content="{TemplateBinding Content}"
                                VerticalAlignment="Center"
                                Margin="3,0,12,0"/>
                                <Path x:Name="SortArrowAsc"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,6,0"
                                  Width="10"
                                  Height="10"
                                  Fill="#FF444444"
                                  Data="M 0 8 L 5 0 L 10 8 Z"/>
                                <Path x:Name="SortArrowDesc"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,6,0"
                                  Width="10"
                                  Height="10"
                                  Fill="#FF444444"
                                  Data="M 0 2 L 5 10 L 10 2 Z"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="SortDirection" Value="Ascending">
                                <Setter TargetName="SortArrowAsc" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SortArrowAsc" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="SortDirection" Value="Descending">
                                <Setter TargetName="SortArrowDesc" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SortArrowDesc" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <DataGrid x:Name="PhasenDataGrid"
                      SelectionMode="Single"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="0,0,0,90"
                      ColumnWidth="*"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nummer"
                                        Binding="{Binding Number}" />
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Dauer"
                                        Binding="{Binding Duration}" />
                    <DataGridTextColumn Header="Vorgänger"
                                        Binding="{Binding PredecessorList}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid VerticalAlignment="Bottom"
              Height="90">
            <Button x:Name="AddPhase"
                    ToolTip="Neue Phase anlegen"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="20,0,0,20"
                    Width="50"
                    Height="50"
                    Click="OpenAddPhaseDialog">
                <StackPanel>
                    <Image Source="Icons/addPhase.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
            <Button x:Name="EditPhase"
                    ToolTip="Phase bearbeiten"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="120,0,0,20"
                    Width="50"
                    Height="50"
                    Click="OpenEditPhaseDialog">
                <StackPanel>
                    <Image Source="Icons/editPhase.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
            <Button x:Name="DeletePhase"
                    ToolTip="Phase löschen"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Margin="220,0,0,20"
                    Width="50"
                    Height="50"
                    Click="DeletePhasePopup">
                <StackPanel>
                    <Image Source="Icons/Delete.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
            <Button x:Name="Gantt"
                    ToolTip="Gantt-Diagramm generieren"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,20"
                    Width="50"
                    Height="50"
                    Click="GenerateGanttChart">
                <StackPanel>
                    <Image Source="Icons/GanttIcon.png"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
    <Window.InputBindings>
        <KeyBinding Key="F4"
                    Modifiers="Alt"
                    Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Window.InputBindings>
</Window>